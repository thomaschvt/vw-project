{% extends '::admin_base.html.twig' %}

{% block body -%}

    <div class="row">
        <div class="col-lg-12">
            <h1>Gestion combis <small>Vintage-West.com</small></h1>
            <ol class="breadcrumb">
                <li class="active"><i class="fa fa-dashboard"></i> Combis</li>
            </ol>
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-money"></i> Recent Transactions</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped tablesorter">
                            <thead>
                            <tr>

                                <th>Model</th>
                                <th>Year</th>
                                <th>Dimension</th>
                                <th>Engine</th>
                                <th>Carburation</th>
                                <th>Consumption</th>
                                <th>Speed</th>
                                <th>Sleeping</th>
                                <th>Seats</th>
                                <th>Imgurl</th>
                                <th>Description</th>
                                <th>Voir</th>
                                <th>Editer</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>

                                    <td>{{ entity.model }}</td>
                                    <td>{{ entity.year }}</td>
                                    <td>{{ entity.dimension }}</td>
                                    <td>{{ entity.engine }}</td>
                                    <td>{{ entity.carburation }}</td>
                                    <td>{{ entity.consumption }}</td>
                                    <td>{{ entity.speed }}</td>
                                    <td>{{ entity.sleeping }}</td>
                                    <td>{{ entity.seats }}</td>
                                    <td>{{ entity.imgUrl }}</td>
                                    <td>{{ entity.description }}</td>
                                    <td><a href="{{ path('car_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td><a href="{{ path('car_edit', { 'id': entity.id }) }}">edit</a></td>
                                    <td><a href="{{ path('car_delete', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-right">
                        <a href="{{ path('car_create') }}">
                            <button class="btn btn-success"><i class="fa fa-plus-circle"></i> Cr√©er</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.row -->

    {% endblock %}
