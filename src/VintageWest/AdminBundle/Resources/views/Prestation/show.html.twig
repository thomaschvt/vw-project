{% extends '::admin_base.html.twig' %}

{% block body -%}
    <h1>Prestation</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Isevent</th>
                <td>{{ entity.isEvent }}</td>
            </tr>
            <tr>
                <th>Durationdays</th>
                <td>{{ entity.durationDays }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Lang</th>
                <td>{{ entity.lang }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Imgurl</th>
                <td>{{ entity.imgUrl }}</td>
            </tr>
            <tr>
                <th>Linkedcombi</th>
                <td>{{ entity.linkedCombi }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('prestations') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('prestations_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
